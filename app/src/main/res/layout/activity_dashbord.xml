<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DashbordActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/dashbord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashbord_bacground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:text="Good Afternoon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLogOut"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/back_btn_bg"
                    android:src="@drawable/ic_logout"
                    app:tint="@color/white" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/semibold"
                android:text="What are you looking for?"
                android:textColor="@color/bg"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/promotion"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white_semi_transp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/circle_blue"
                            android:padding="@dimen/_14sdp"
                            android:src="@drawable/ic_add_driver"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Add Driver"
                            android:textColor="@color/lite_blue"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/orders"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white_semi_transp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/circle_dark_blue"
                            android:padding="@dimen/_14sdp"
                            android:src="@drawable/ic_bus_schadule"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Bus schedule"
                            android:textColor="#9676FF"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/products"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white_semi_transp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/circle_dashbord_pink"
                            android:padding="@dimen/_14sdp"
                            android:src="@drawable/user"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Registered\nuser"
                            android:gravity="center_horizontal"
                            android:textColor="@color/lite_pink"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/settings"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white_semi_transp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/circle_dashbord_green"
                            android:padding="@dimen/_14sdp"
                            android:src="@drawable/manage"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Manage\nusers"
                            android:gravity="center_horizontal"
                            android:textColor="@color/lite_green"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="180dp"
                android:layout_height="@dimen/_160sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/white_semi_transp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:id="@+id/settiong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/circle_yellow"
                        android:padding="@dimen/_14sdp"
                        android:src="@drawable/baseline_bus_alert_24"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="Add/Delete\nBus"
                        android:gravity="center_horizontal"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>